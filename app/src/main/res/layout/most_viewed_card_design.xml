<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mv_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/mcdonalds_img"
            android:scaleType="centerCrop"
            android:contentDescription="@string/mcdonald_s" />

        <TextView
            android:id="@+id/mv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mcdonald_s"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/mv_image"
            android:textSize="20sp"
            android:fontFamily="sans-serif"/>

        <RatingBar
            android:id="@+id/mv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/mv_title"
            android:layout_toEndOf="@id/mv_image"
            android:layout_marginStart="10dp"
            android:rating="4"/>

        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_slide_desc"
            android:layout_below="@id/mv_rating"
            android:layout_toEndOf="@id/mv_image"
            android:padding="10dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>